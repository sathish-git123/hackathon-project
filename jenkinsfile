pipeline {
  agent any

  //tools {nodejs "NodeJS"}

  stages {

         stage('Checkout') {
            steps {
                // Checkout the repository
                git branch: 'master', url: 'https://github.com/sathish-git123/hackathon-project.git'
            }
        }

        stage('Pull Changes') {
            steps {
                // Pull the latest changes from the repository
                sh 'git pull'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
  }
}
